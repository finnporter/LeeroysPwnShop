<h1><%= @supplier.name %></h1>
<!-- Why is this not the right name??? -->

<!-- if possible turn this table properly vertical when more properties are added -->
<table>
  <tr>
    <th>Supplier Number</th>
    <td><%= @supplier.id %></td>
  </tr>
</table>

<form method="post" action="/suppliers/<%= @supplier.id %>/delete">
  <input type="submit" value="Delete Supplier">
</form>

<h2>Products by this supplier</h2>

<table>
  <tr>
    <th>Product Number</th>
    <th>Product Name</th>
    <th>Stock</th>
  </tr>
  <% for product in @products %>
  <tr>
    <td><%= product.id %></td>
    <td><a href="/products/<%= product.id %>"><%= product.name %></a></td>
    <td><%= product.quantity %></td>
    <td><% if product.quantity <= 3 %>
          <img src="/img/ico_red.png">
        <% elsif product.quantity >= 20 %>
          <img src="/img/ico_green.png">
        <% else %>
          <img src="/img/ico_yellow.png">
      <% end %>
    </td>
    <td><a href="/order">Order more</a></td>
  </tr>
  <% end %>
</table>
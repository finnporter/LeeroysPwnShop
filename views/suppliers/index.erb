<h1>Suppliers</h1>
<table class="table-div">
  <tr>
    <th>Name</th>
    <th>Location</th>
  </tr>
  <% for supplier in @suppliers %>
  <tr>
    <td><a href="/suppliers/<%= supplier.id %>"><%= supplier.name %></a></td>
    <td><%= supplier.location %></td>
    <td><a class="link-to-button" href="/suppliers/<%= supplier.id %>/edit">Edit Supplier</a></td>
  <% end %>
  </tr>

</table>
<h1>Inventory</h1>

<a href="/products/add">Add Product</a>

<table>
  <tr>
    <th>Product Number</th>
    <th>Product Name</th>
    <th>Stock</th>
    <th>Supplier</th>
  </tr>
  <% for product in @products %>
  <tr>
    <td><%= product.id %></td>
    <td><a href="/products/<%= product.id %>"><%= product.name %></a></td>
    <td><%= product.quantity %></td>
    <td> <a href="/suppliers/<%= product.supplier_id %>"><%= product.which_supplier.name %></a></td>
  <% end %>
  </tr>
</table>